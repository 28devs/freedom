.btn
  padding: 22px 1rem
  text: #fff center 20px 1.1 500
  text-decoration: none
  font-family: $font
  border: 1px solid #bfd000
  outline: 0
  cursor: pointer
  border-radius: 5px
  background-color: $main
  background-image: linear-gradient(90deg, #45b900, #007c0f)
  user-select: none
  display: inline-flex
  align-items: center
  justify-content: center
  width: 100%
  max-width: 253px
  box-shadow: 0 8px 7px rgba(15, 8, 5, 0.3)
  -webkit-tap-highlight-color: transparent
  &:hover
    background-image: none
    border-color: $main
  &:active
    opacity: .9
    box-shadow: 0 4px 5px rgba(15, 8, 5, 0.3)

  &--action
    padding: 19px * 14px
    background-color: #f27262
    background-image: none
    text-transform: uppercase
    border-color: #fff
    font-size: 22px @xl 30px
    max-width: 396px
    &:after
      content: ""
      background-image: url("data:image/png;base64,")
      background-size: contain
      background-repeat: no-repeat
      background-position: center
      margin-left: 25px
      margin-right: -26px
      size: 38px @lg 46px 44px
    &:hover
      border-color: #ff7968
      background-color: #ff7968